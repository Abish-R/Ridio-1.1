<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical" 
    >
    <ScrollView
        android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:layout_marginLeft="30dp"
    android:layout_marginRight="20dp"
    android:layout_marginTop="15dp"
    android:layout_marginBottom="10dp">
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:weightSum="2" >
        
    <LinearLayout 
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.3"
        android:orientation="vertical">
        <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp"
        android:gravity="bottom"
        android:weightSum="2">
        <ImageView
            android:layout_weight=".25"
            android:id="@+id/imageView1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/logo_yellow_small" />
        <TextView
            android:layout_weight="1.75"
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="#ffba00"
            android:textSize="30dp"
            android:gravity="center|bottom"
            android:text="New Booking" />
        </LinearLayout>

        
 
        <Space 
            android:layout_width="wrap_content"
        	android:layout_height="10dp"/>
      
        <TextView
            android:id="@+id/mob1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffba00"
            android:textSize="16dp"
            android:text="Mobile Number " />
        <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">
        
        <EditText
            android:layout_weight=".4"
            android:id="@+id/cust_mobile1_code"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:imeOptions="flagNoExtractUi"
            android:layout_marginRight="7dp"
            android:maxLength="5"
            android:textSize="22dp"
            android:paddingLeft="5dp"
            android:text="+91"
            android:inputType="phone"
            android:digits="0123456789+"
            android:maxLines="1"
            android:singleLine="true"
            android:background="@drawable/edittext_rect_yellow_border" >
	
        </EditText>

        <EditText
            android:layout_weight="1.3"
            android:id="@+id/cust_mobile1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="22dp"
            android:imeOptions="flagNoExtractUi"
            android:layout_marginRight="7dp"
            android:digits="0123456789"
            android:hint="Mobile 1"
            android:maxLength="10"
            android:paddingLeft="5dp"
            android:inputType="number"
            android:maxLines="1"
            android:singleLine="true"
            android:background="@drawable/edittext_rect_yellow_border" >
        </EditText>
        <EditText
            android:layout_weight="1.3"
            android:id="@+id/cust_mobile2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="22dp"
            android:imeOptions="flagNoExtractUi"
            android:digits="0123456789"
            android:maxLength="10"
            android:paddingLeft="5dp"
            android:inputType="number"
            android:hint="Mobile 2"
            android:maxLines="1"
            android:singleLine="true"
            android:background="@drawable/edittext_rect_yellow_border" >

        </EditText>
        
    </LinearLayout>
    
    <Space 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"/>
    <TextView
            android:id="@+id/custname"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textColor="#ffba00"
            android:textSize="16dp"
            android:text="Name " />        

        <EditText
            android:id="@+id/cust_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:imeOptions="flagNoExtractUi"
            android:digits="qwertyuioplkjhgfdsazxcvbnmQWERTYUIOPLKJHGFDSAZXCVBNM "
            android:textSize="22dp"
            android:hint="Enter Name"
            android:maxLength="50"
 			android:paddingLeft="5dp"
            android:maxLines="1"
            android:singleLine="true"
            android:background="@drawable/edittext_rect_yellow_border" >            
        </EditText> 
               
    <Space 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:id="@+id/email"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textColor="#ffba00"
            android:textSize="16dp"
            android:text="Email ID " />

        <EditText
            android:id="@+id/cust_email"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="22dp"
            android:imeOptions="flagNoExtractUi"
            android:maxLength="30"
            android:digits="qwertyuioplkjhgfdsazxcvbnmQWERTYUIOPLKJHGFDSAZXCVBNM.1234567890_-@"
            android:layout_weight="1"
            android:paddingLeft="5dp" 
            android:hint="Enter Email"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:singleLine="true"
            android:background="@drawable/edittext_rect_yellow_border" >

        </EditText>
        
    <Space 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"/>

		<LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">
        <TextView
            android:layout_weight=".7"
            android:id="@+id/hotel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:textSize="16dp"
            android:textColor="#ffba00"
            android:text="Hotel Name" />
        <TextView
            android:layout_weight=".3"
            android:id="@+id/bikec"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:textColor="#ffba00"
            android:text="Bike Type" />
        </LinearLayout>
        
        <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">
		<Spinner
		    android:layout_weight=".675"
            android:id="@+id/cust_hotel"
            android:layout_width="0dp"
            android:layout_height="35dp" 
            android:paddingBottom="1dp"
            android:background="@drawable/spinner_press"
            android:paddingLeft="5dp"
            android:popupBackground="#e6ad00" />

		<ImageView
		    android:layout_weight=".025"
		    android:id="@+id/imageView2"
		    android:layout_width="0dp"
		    android:layout_height="35dp"
		    android:layout_marginRight="5dp"
		    android:background="@color/spinner_default_color"
		    android:src="@drawable/drop_icon1" />
		<EditText
            android:id="@+id/cust_hotel1"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_marginRight="5dp"
            android:imeOptions="flagNoExtractUi"
            android:enabled="false"
            android:visibility="gone"
            android:layout_weight=".7"
             android:paddingLeft="5dp"
            android:inputType="textPersonName"
            android:background="@drawable/edittext_rect_yellow_border">

        </EditText>
		<Spinner
		    android:layout_weight=".28"
            android:id="@+id/bike_categ"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:paddingLeft="5dp"
            android:background="@drawable/spinner_press"
            android:popupBackground="#e6ad00"
            android:spinnerMode="dropdown" />

		<ImageView
		    android:layout_weight=".02"
		    android:id="@+id/imageView4"
		    android:layout_width="0dp"
		    android:layout_height="35dp"
		    android:background="@color/spinner_default_color"
		    android:src="@drawable/drop_icon1" />
		</LinearLayout>
        
        
    <Space 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"/>

        
        <TextView
            android:id="@+id/bike"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:textColor="#ffba00"
            android:text="Bike Details " />
        <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">
		
        <Spinner
            android:layout_weight="1.22"
            android:id="@+id/cust_bike"
            android:layout_width="0dp"
            android:layout_height="35dp" 
            android:paddingBottom="1dp"
            android:paddingLeft="2dp"
            android:background="@drawable/spinner_press"
  		    android:popupBackground="#e6ad00"
            android:spinnerMode="dropdown" />
        <ImageView
		    android:layout_weight=".08"
		    android:id="@+id/imageView3"
		    android:layout_width="0dp"
		    android:layout_height="35dp"
		    android:background="@color/spinner_default_color"
		    android:layout_marginRight="5dp"
		    android:src="@drawable/drop_icon1" />
        <Spinner
            android:layout_weight=".74"
            android:id="@+id/cust_bike_color"
            android:layout_width="0dp"
            android:layout_height="35dp" 
            android:paddingBottom="1dp"
            android:paddingLeft="2dp"
            android:background="@drawable/spinner_press"
  	        android:popupBackground="#e6ad00"
  	        android:spinnerMode="dropdown" />
        <ImageView
		    android:layout_weight=".08"
		    android:id="@+id/imageView5"
		    android:layout_width="0dp"
		    android:layout_height="35dp"
		    android:background="@color/spinner_default_color"
		    android:layout_marginRight="5dp"
		    android:src="@drawable/drop_icon1" />
        <Spinner
            android:layout_weight=".83"
            android:id="@+id/cust_bike_number"
            android:layout_width="0dp"
            android:layout_height="35dp" 
            android:paddingBottom="1dp"
            android:paddingLeft="2dp"
            android:background="@drawable/spinner_press"
  	        android:popupBackground="#e6ad00"
   	        android:spinnerMode="dropdown" />
        <ImageView
		    android:layout_weight=".07"
		    android:id="@+id/imageView6"
		    android:layout_width="0dp"
		    android:layout_height="35dp"
		    android:background="@color/spinner_default_color"
		    android:layout_marginRight="5dp"
		    android:src="@drawable/drop_icon1" />
        </LinearLayout>

    
    <Space 
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginBottom="5dp"/>
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="bottom"
        android:weightSum="5">
    <LinearLayout 
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1.6">

        <TextView
            android:id="@+id/frm_date"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textColor="#ffba00"
            android:textSize="16dp"
            android:text="From Date " />

        <EditText
            android:id="@+id/cust_frm_date"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="22dp"
            android:imeOptions="flagNoExtractUi"
            android:enabled="false"
            android:paddingLeft="5dp"
            android:hint="date"
            android:inputType="date"
            android:focusable="false"
            android:background="@drawable/edittext_rect_yellow_border" >

        </EditText>

        
	<!--TextView
            android:id="@+id/days"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:paddingRight="5dp"
            android:gravity="right"
            android:textColor="#000000"
            android:textSize="25sp"
            android:text="Days" /-->
        
        
    </LinearLayout>
    <ImageButton
            android:id="@+id/cal_frm_date"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:background="@drawable/press_effect_calendar"
            android:layout_marginRight="10dp"
            android:layout_weight=".35" />
    <Space 
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginBottom="5dp"/>
    <LinearLayout 
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1.6">
        <TextView
            android:id="@+id/to_dat"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textColor="#ffba00"
            android:textSize="16dp"
            android:text="To date " />

        <EditText
            android:id="@+id/cust_to_date"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="22dp"
            android:imeOptions="flagNoExtractUi"
            android:enabled="false"
             android:paddingLeft="5dp"
            android:hint="date"
            android:inputType="date"
            android:focusable="false"
            android:background="@drawable/edittext_rect_yellow_border" >

        </EditText>       
    </LinearLayout>
    <ImageButton
            android:id="@+id/cal_to_date"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:background="@drawable/press_effect_calendar"
            android:layout_marginRight="20dp"
            android:layout_weight=".35" />
    <LinearLayout 
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1.1">
        <TextView
            android:id="@+id/cost"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingRight="3dp"
            android:gravity="left"
            android:textColor="#ffba00"
            android:layout_marginLeft="15dp"
            android:textSize="16dp"
            android:textStyle="bold"
            android:text="Days " />
         <EditText
            android:id="@+id/cust_total_days"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:imeOptions="flagNoExtractUi"
            android:maxLength="3"
            android:layout_marginLeft="15dp"
            android:textSize="20dp"
            android:paddingLeft="5dp"
            android:inputType="numberDecimal"
            android:maxLines="1"
            android:singleLine="true"
            android:background="@drawable/edittext_rect_yellow_border">

        </EditText>
         </LinearLayout>

    </LinearLayout>
        <Space
        android:layout_width="wrap_content"
        android:layout_height="20dp"></Space>
    <LinearLayout 
        android:id="@+id/last_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:visibility="visible"
        android:weightSum="5">

        <TextView
            android:layout_weight="1.4"
            android:id="@+id/bike_rate"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:gravity="bottom"
            android:layout_marginRight="15dp"
            android:textColor="#ffba00"
            android:textSize="23dp"
            android:text="Bike Rate " />
       
        <Button
            android:layout_weight=".5"
        android:id="@+id/minus"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:text="-"
        android:textSize="30dp"
        android:textStyle="bold"  
        android:gravity="center"
        android:background="@drawable/press_effect_curved_rect"/>
		
        <EditText
            android:layout_weight="1.6"
            android:id="@+id/cust_bike_rate"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textSize="22dp"
            android:imeOptions="flagNoExtractUi"
            android:enabled="false"
            android:paddingLeft="5dp"
            android:text="50"
            android:inputType="number"
            android:focusable="false"
            android:background="@drawable/edittext_rect_yellow_border" >

        </EditText>
        <Button
            android:layout_weight=".5"
        android:id="@+id/plus"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:textStyle="bold" 
        android:text="+"
        android:textSize="30dp" 
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:background="@drawable/press_effect_curved_rect"/>
        <EditText
            android:layout_weight="1"
            android:id="@+id/cust_total_cost"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:textStyle="bold"
            android:textSize="25dp"
            android:textColor="#330000"
            android:imeOptions="flagNoExtractUi"
            android:paddingLeft="5dp"
            android:inputType="number" 
            android:enabled="false"
            android:focusable="false"
            android:background="@drawable/edittext_rect_yellow_border">

        </EditText>

    </LinearLayout>
    </LinearLayout>   
     
    </LinearLayout>

    
	<LinearLayout 
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight=".7"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginRight="20dp">
    <TextView
            android:id="@+id/text_vendor"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="#ffba00"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="22dp"
            android:text="Vendor ID : " />
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:orientation="vertical">
    <ImageView
        android:id="@+id/cam_img"
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:layout_marginTop="75dp"
        android:src="@drawable/user" />
	<LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom|center"
        >
    <Button
        android:id="@+id/cust_photo"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:gravity="center"
        android:textSize="25dp"        
        android:background="@drawable/press_effect_rect"
        android:text="Take Picture" />
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="bottom|center"
        >
    
    <Button
        android:id="@+id/cust_save"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:gravity="center"
        android:textSize="25dp"        
        android:background="@drawable/press_effect_rect"
        android:text="Save Booking" />
     </LinearLayout>
</LinearLayout>
    </LinearLayout>
    </LinearLayout>
</ScrollView>

</LinearLayout>
