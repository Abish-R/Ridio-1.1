<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainscreen_bg1"
    android:layout_gravity="center_horizontal">

<LinearLayout
    android:id="@+id/layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="top"
    android:layout_marginTop="15dp"
    android:layout_marginLeft="15dp"
    android:orientation="vertical" >

    <!--Button
        android:id="@+id/button1"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:text="LogIn/SignUp" /-->

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:src="@drawable/logo_white" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="160dp"
        android:text="DASHBOARD"
        android:textSize="35dp"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    </LinearLayout>

    <Button
        android:id="@+id/settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/press_password_reset" />
<!-- /LinearLayout-->

    <Button
        android:id="@+id/user"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginLeft="25dp"
        android:layout_toRightOf="@+id/hotel"
        android:layout_above="@+id/rate"
        android:layout_marginBottom="65dp"
        android:background="@drawable/press_new_bookings" />
    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView4"
        android:layout_toRightOf="@+id/hotel"
        android:layout_marginLeft="40dp"
        android:layout_marginBottom="25dp"
        android:textSize="15dp"
        android:textColor="#ffba00"
        android:text="New Bookings"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <Button
        android:id="@+id/return_vehicle"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_above="@+id/rate"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="100dp"
        android:layout_toRightOf="@+id/user"
        android:background="@drawable/press_return_vehicle" />
    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView5"
        android:layout_toRightOf="@+id/user"
        android:layout_marginLeft="55dp"
        android:layout_marginBottom="12dp"
        android:textSize="15dp"
        android:textColor="#ffba00"
        android:text="Return Bike"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <Button
        android:id="@+id/vehicle"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_above="@+id/settings"
        android:layout_toRightOf="@+id/rate"
        android:layout_marginLeft="10dp"
        android:background="@drawable/press_vehicle_master" />
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/vehicle"
        android:layout_toRightOf="@+id/rate"
        android:layout_marginLeft="20dp"
        android:textSize="15dp"
        android:textColor="#ffba00"
        android:text="Vehicle Master"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <Button
        android:id="@+id/hotel"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_above="@+id/textView4"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/vehicle"
        android:background="@drawable/press_hotel_master" />
    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/rate"
        android:layout_toRightOf="@+id/vehicle"
        android:layout_marginLeft="40dp"
        android:textSize="15dp"
        android:textColor="#ffba00"
        android:text="Hotel Master"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <Button
        android:id="@+id/report"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_above="@+id/hotel"
        android:layout_alignParentRight="true"
        android:layout_marginRight="23dp"
        android:background="@drawable/press_mis_report" />
    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView6"
        android:layout_toRightOf="@+id/textView7"
        android:layout_marginLeft="95dp"
        android:layout_marginBottom="20dp"
        android:textSize="15dp"
        android:textColor="#ffba00"
        android:text="MIS Report"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <Button
        android:id="@+id/sync"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginRight="25dp"
        android:layout_toLeftOf="@+id/report"
        android:layout_above="@+id/vehicle"
        android:layout_marginBottom="40dp"
        android:background="@drawable/press_sync" />
    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView6"
        android:layout_toRightOf="@+id/return_vehicle"
        android:layout_marginLeft="90dp"
        android:layout_marginBottom="10dp"
        android:textSize="15dp"
        android:textColor="#ffba00"
        android:text="Sync"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/settings"
        android:layout_alignRight="@+id/rate"
        android:layout_marginRight="15dp"
        android:textSize="15dp"
        android:textColor="#ffba00"
        android:text="Rate Master"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <Button
        android:id="@+id/rate"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_above="@+id/textView3"
        android:layout_alignLeft="@+id/layout"
        android:background="@drawable/press_rate_master" />
     
</RelativeLayout>