<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF" >
    <LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="10dp"
    android:gravity="bottom"
    android:orientation="horizontal"
    android:weightSum="2" >

        <ImageView
            android:layout_weight=".25"
            android:id="@+id/imageView1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:src="@drawable/logo_yellow_small" />

	<TextView
	    android:layout_weight="1.4"
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="#ffba00"
        android:textStyle="bold"
        android:textSize="30dp"
        android:gravity="center|bottom"
        android:text="Vehicle Master" />
	</LinearLayout>
	<LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="10dp"
    android:gravity="center"
    android:orientation="horizontal">

		<EditText
		    android:id="@+id/date"
		    android:layout_width="150dp"
		    android:layout_height="40dp"
            android:imeOptions="flagNoExtractUi"
            android:enabled="false"
            android:paddingLeft="5dp"
            android:textSize="22dp" >
		</EditText>
		<ImageButton
        android:id="@+id/ib_date"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="bottom"
        android:background="@drawable/press_effect_calendar"
        android:layout_marginRight="20dp" />
	    
	</LinearLayout>
	<LinearLayout 
	    android:id="@+id/list_title_layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:background="@color/list_title_color"
    android:visibility="gone"
    android:gravity="center"
    android:orientation="horizontal"
    android:weightSum="5">

		<TextView
		    android:layout_weight=".9"
		    android:id="@+id/textView1"
		    android:layout_width="0dp"
		    android:layout_height="wrap_content"
		    android:textSize="22dp"
 	        android:textColor="@color/ridio_yellow_lite"
		    android:layout_marginLeft="10dp"
		    android:text="Vehicle Type" />
		<TextView
		    android:layout_weight="1.1"
		    android:id="@+id/textView2"
		    android:layout_width="0dp"
		    android:layout_height="wrap_content"
		    android:textSize="22dp"
     	    android:textColor="@color/ridio_yellow_lite"
		    android:text="Vehicle Name" />
		<TextView
		    android:layout_weight="1"
		    android:id="@+id/textView3"
		    android:layout_width="0dp"
		    android:layout_height="wrap_content"
		    android:textSize="22dp"
        	android:textColor="@color/ridio_yellow_lite"
		    android:text="Vehicle Rented" />
		<TextView
		    android:layout_weight="1"
		    android:id="@+id/textView4"
		    android:layout_width="0dp"
		    android:layout_height="wrap_content"
		    android:textSize="22dp"
        	android:textColor="@color/ridio_yellow_lite"
		    android:text="Vehicle In House" />
		<TextView
		    android:layout_weight="1"
		    android:id="@+id/textView5"
		    android:layout_width="0dp"
		    android:layout_height="wrap_content"
		    android:textSize="22dp"
        	android:textColor="@color/ridio_yellow_lite"
		    android:layout_marginRight="10dp"
		    android:text="Average Rate" />
	    
	</LinearLayout>

	<ListView
	    android:id="@+id/report_list"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:dividerHeight="1dip"
	    android:divider="@color/ridio_yellow_lite"
	    android:layout_marginBottom="10dp" >
	</ListView>

</LinearLayout>
